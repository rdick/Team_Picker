<%- include("./partials/header.ejs") %>

<div class="container" style="line-height: 2em; margin-top: 3vh;">
  <h2>Add New Cohort Here</h2>
  <br />
  <form action="/team/new" method="POST">
    <div class="form-group">
      <h5>Logo URL</h5>
      <input
        type="text"
        name="logoUrl"
        id="logoUrl"
        class="form-control"
        placeholder="eg. http://www.example.com/some.ping"
      />
    </div>

    <div class="form-group">
      <h5>Name</h5>
      <input
        type="text"
        name="name"
        id="name"
        class="form-control"
        placeholder="Flying Funks Are The Best"
      />
    </div>

    <div class="form-group">
      <h5>Members</h5>
      <input
        type="text"
        name="members"
        id="members"
        class="form-control"
        placeholder="Jon Snow, Akshay Nanda, Shurooq"
      />
    </div>
    <div style="display: block; width: 100%;">
      <input type="submit" value="Submit" class="btn btn-primary btn-block" />
    </div>
  </form>
</div>
<%- include("./partials/footer.ejs") %>
