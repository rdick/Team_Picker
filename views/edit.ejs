<%- include("./partials/header.ejs") %>

<div class="container" style="line-height: 2em; margin-top: 3vh;">
  <h2>Edit Cohort Here</h2>
  <br />
  <form action="/team/<%= team.id %>/edit" method="POST">
    <div class="form-group">
      <h5>Logo URL</h5>
      <input
        type="text"
        name="logoUrl"
        id="logoUrl"
        class="form-control"
        value="<%= team.logoUrl %>"
      />
    </div>

    <div class="form-group">
      <h5>Name</h5>
      <input
        type="text"
        name="name"
        id="name"
        class="form-control"
        value="<%= team.name %>"
      />
    </div>

    <div class="form-group">
      <h5>Members</h5>
      <input
        type="text"
        name="members"
        id="members"
        class="form-control"
        value="<%= team.members %>"
      />
    </div>
    <div style="display: block; width: 100%;">
      <input type="hidden" name="_method" value="PATCH" />
      <input type="submit" value="Submit" class="btn btn-primary btn-block" />
    </div>
  </form>
</div>
<%- include("./partials/footer.ejs") %>
